local function createGUI()
    local ScreenGui = Instance.new("ScreenGui")
    local Frame = Instance.new("Frame")
    local UICorner = Instance.new("UICorner")
    local TextLabel = Instance.new("TextLabel")
    local UICorner2 = Instance.new("UICorner")
    local Button50 = Instance.new("TextButton")
    local Button1 = Instance.new("TextButton")

    ScreenGui.Name = "AgeChanger"
    ScreenGui.Parent = game.CoreGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    Frame.Parent = ScreenGui
    Frame.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
    Frame.Position = UDim2.new(0.4, 0, 0.4, 0)
    Frame.Size = UDim2.new(0, 300, 0, 150)

    UICorner.Parent = Frame

    TextLabel.Parent = Frame
    TextLabel.BackgroundTransparency = 1
    TextLabel.Position = UDim2.new(0, 0, 0, 10)
    TextLabel.Size = UDim2.new(1, 0, 0, 30)
    TextLabel.Font = Enum.Font.SourceSansBold
    TextLabel.Text = "Pet Age Modifier"
    TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextLabel.TextScaled = true

    Button50.Parent = Frame
    Button50.BackgroundColor3 = Color3.fromRGB(0, 200, 120)
    Button50.Position = UDim2.new(0.1, 0, 0.5, 0)
    Button50.Size = UDim2.new(0.35, 0, 0.3, 0)
    Button50.Font = Enum.Font.SourceSansBold
    Button50.Text = "+50 Age"
    Button50.TextColor3 = Color3.fromRGB(255, 255, 255)

    Button1.Parent = Frame
    Button1.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
    Button1.Position = UDim2.new(0.55, 0, 0.5, 0)
    Button1.Size = UDim2.new(0.35, 0, 0.3, 0)
    Button1.Font = Enum.Font.SourceSansBold
    Button1.Text = "+1 Age"
    Button1.TextColor3 = Color3.fromRGB(255, 255, 255)

    UICorner2.Parent = Button1

    local function getEquippedPet()
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        for _, child in pairs(character:GetChildren()) do
            if child:IsA("Tool") and child.Name:find("Age") then
                return child
            end
        end
        return nil
    end

    local function changePetAge(add)
        local pet = getEquippedPet()
        if pet then
            local num = tonumber(string.match(pet.Name, "%d+")) or 0
            local newAge = num + add
            pet.Name = string.gsub(pet.Name, "%[Age%s*%d+%]", "[Age " .. newAge .. "]")
        else
            warn("No equipped pet with 'Age' found.")
        end
    end

    Button50.MouseButton1Click:Connect(function()
        changePetAge(50)
    end)

    Button1.MouseButton1Click:Connect(function()
        changePetAge(1)
    end)
end

createGUI()
